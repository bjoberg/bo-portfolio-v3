extends ./layout

block content
  header.chicago
    .header-content
      .header-content-inner
        h1 Chicago
        br               
        a.mdl-button.mdl-button--colored.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.wow.tada.page-scroll(href='#posts') View posts
        a.left-margin.mdl-button.mdl-button--accent.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.page-scroll(href='/bucketlist') Bucketlist
  |   
  section.post#posts
    .container
      .row
        h1.text-center Let's Explore Chicago.
        .placeholder-small
        for post in posts
          .col-lg-4.col-md-6.col
            .blog-card-square.mdl-card.mdl-shadow--2dp.wow.bounceIn(data-wow-delay='.#{post.key}s')
              .mdl-card__title.mdl-card--expand(style="background:url('/static/img/blog/chicago/#{post.cardImage}') no-repeat #46B6AC; background-position: center; -webkit-background-size: cover; -moz-background-size: cover; background-size: cover; -o-background-size: cover;")
              .mdl-card__supporting-text
                h1 #{post.title}
                p 
                  b #{post.date}
                p #{post.teaser}
              .mdl-card__actions
                a(href='/blog/' + post.title, style="color:#000").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect.pull-right Read more
